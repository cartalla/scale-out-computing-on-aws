
function Create-Environment {
    $User = Read-Host -Prompt "What is your SOCA username?"
    $Token = Read-Host -Prompt "What is your SOCA token?"
    Write-Output "user=$User `ntoken=$token" | Out-File $Soca_configuration
}

$Soca_configuration = "~\.soca_submit.cfg"
$Soca_configured = Test-Path $Soca_configuration
$action=$args[0]
if ($action -eq "configure")
{
    Create-Environment
}
elseif ($action -eq "submit")
{
Write-Output "Submit"
}

else{
Write-Output "Options can only be configure or submit"
}


If (-Not $Soca_configured)
{
    Create-Environment
}
